<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_memo"
            android:id="@+id/button"
            android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
            android:layout_marginLeft="50dp" android:layout_marginBottom="100dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/memo_list"
            android:id="@+id/button2"
            android:layout_marginRight="50dp"
            android:layout_alignTop="@+id/button" android:layout_alignParentRight="true"
            android:layout_marginBottom="100dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/app_name"
            android:id="@+id/textView" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/description"
            android:id="@+id/textView2" android:layout_below="@+id/textView" android:layout_centerHorizontal="true"
            android:layout_marginTop="53dp"/>
</RelativeLayout>

